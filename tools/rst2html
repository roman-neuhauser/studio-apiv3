rst2html="$($SHELL ${0%/*}/find-rst2html)"
test -z "$rst2html" && exit 1
rest="$1"
html="$2"
surl="${rest##*/}"

sed \
  -e '/^\.\. _.*\.rest$/s/\.rest$/.html/' \
  -e '/^\.\. _.*`:$/{n; s/\.rest$/.html/; }' \
  < $rest | \
  $rst2html --stylesheet-path=style.css --link-stylesheet --strict - $html

# vim: ft=sh sw=2 ts=2 et
