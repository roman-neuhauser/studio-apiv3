rst2html="$($SHELL ${0%/*}/find-rst2html)"
test -z "$rst2html" && exit 1
rest="$1"
html="$2"
surl="${rest##*/}"

restr="${rest%.*}"
htmlr="${html%.*}"
output=${htmlr%$restr}

tdir="$(dirname "$html")"
test -d "$tdir" || mkdir -p "$tdir"

sed \
  -e '/^\.\. _.*\.rest$/s/\.rest$/.html/' \
  -e '/^\.\. _.*`:$/{n; s/\.rest$/.html/; }' \
  < $rest | \
  echo $rst2html --stylesheet-path=${output}style.css --link-stylesheet --strict - $html

# vim: ft=sh sw=2 ts=2 et
